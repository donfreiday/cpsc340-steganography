    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (gdb)",
            "type": "cppdbg",
            "preLaunchTask": "gcc",
            "program": "${workspaceRoot}/stega",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            //"args": ["hide", "Stega.txt", "Wien-2018.bmp"],
            "args": ["show", "stega.bmp"],
            "externalConsole": false
        },
        {
            "name": "Debug (lldb)",
            "type": "lldb-mi",
            "preLaunchTask": "gcc",
            "request": "launch",
            "target": "a.out",
            "cwd":"${workspaceRoot}",
            "arguments": "12 10 9"
            
        }
    ]
}